<%-include('header') -%>
<%- include('navbar') -%>
<%- include('footer') -%>



<div class="container mt-2">
    <form>
        <div class="form-group row">
            <label for="nombre" class="col col-sm-3 col-from-label">Nombre</label>
            <div class="col-sm-9">
                <input type="texto" id="nombre" name="nombre" class="form-control"
                    placeholder="Ingrese su nombre y apellido...">
            </div>
        </div>


        <div class="form-group row">
            <label for="email" class="col-sm-3 col-from-label">Email</label>
            <div class="col-sm-9">
                <input type="email" id="email" name="email" class="form-control" placeholder="email@example.com">
            </div>
        </div>


        <div class="form-group row">
            <label for="sugerencia" class="col-sm-3 col-from-label">Comentario/Sugerencia</label>
            <div class="col-sm-9">
                <textarea type="text" id="comentario" name="comentario" class="form-control"
                    placeholder="Ingrese su comentario..." rows="15"></textarea>
            </div>
            <div>

                <div class="text-center mb-2">
                    <button type="button" class="btn btn-outline-primary"><i class="fas fa-paper-plane"></i>
                        Enviar
                    </button>
                </div>




    </form>


</div>
